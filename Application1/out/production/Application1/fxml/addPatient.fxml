<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddPatient">
   <children>
      <AnchorPane prefHeight="100.0" prefWidth="1080.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <AnchorPane layoutY="100.0" prefHeight="620.0" prefWidth="1080.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="620.0" prefWidth="1080.0" spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TextField fx:id="patientName" alignment="CENTER" prefHeight="50.0" prefWidth="400.0" promptText="Patient Name">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <DatePicker fx:id="dob" prefHeight="50.0" prefWidth="400.0" promptText="Date of Birth" />
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="50.0">
                     <children>
                        <RadioButton fx:id="male" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="2501.0" text="Male">
                           <font>
                              <Font size="21.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="gender" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="female" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="2501.0" text="Female" toggleGroup="$gender">
                           <font>
                              <Font size="21.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="other" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="2501.0" text="Other" toggleGroup="$gender">
                           <font>
                              <Font size="21.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </HBox>
                  <TextArea fx:id="patientAddress" prefHeight="73.0" prefWidth="880.0" promptText="Enter Patient Address">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </TextArea>
                  <TextField fx:id="patientPhoneNumber" alignment="CENTER" prefHeight="50.0" prefWidth="400.0" promptText="Enter Pateint Phone number">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#addPatientButtonClick" prefHeight="43.0" prefWidth="246.0" text="Submit">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets left="150.0" right="150.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
