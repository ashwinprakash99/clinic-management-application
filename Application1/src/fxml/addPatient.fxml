<AnchorPane fx:id="parent" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddPatient">
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="1080.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="1080.0" />
                  <AnchorPane prefHeight="200.0" prefWidth="1080.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#backClick" prefHeight="101.0" prefWidth="158.0">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                                 <graphic>
                                    <ImageView fitHeight="52.0" fitWidth="76.0">
                                       <image>
                                          <Image url="@../image/Arrow Back 4.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <ButtonBar prefHeight="100.0" prefWidth="1002.0">
                                 <buttons>
                                    <Button mnemonicParsing="false" onAction="#clerkPageClick" prefHeight="60.0" prefWidth="445.0" text="CLERK" />
                                    <Button mnemonicParsing="false" onAction="#doctorPageClick" prefHeight="60.0" prefWidth="234.0" text="DOCTOR" />
