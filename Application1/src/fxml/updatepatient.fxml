                           <font>
                              <Font size="23.0" />
                           </font>
                        </TextField>
                        <Button fx:id="checkBtn" mnemonicParsing="false" onAction="#checkBtnClick" prefHeight="50.0" prefWidth="300.0" text="Check">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <TextField fx:id="patientName" alignment="CENTER" prefHeight="50.0" prefWidth="100.0" promptText="Patient Name">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </TextField>
